{
    "manifest_version": 2,
    "name": "Egami Search",
    "version": "1.0.0",
  
    "description": "Right click to reverse image search.",

    "browser_specific_settings": {
        "gecko": {
          "id": "egami-search@mcaxiaz"
        }
    },

    "background": {
        "scripts": ["background.js"]
    },

    "icons": {
        "48": "icons/icon.png",
        "96": "icons/icon@2x.png"
    },

    "developer": {
        "name": "MCAxiaz",
        "url": "https://github.com/MCAxiaz/egami-search"
    },

    "permissions": [
        "contextMenus"
    ]
}